<% layout("../layout/boilerplate") %>

   <div class="row">
    <div class="col-6 offset-3">
    <div class="card mt-3">
      <h3 class="card-text"><b> <%= listing.title %> </b></h3>

      <img src="<%= listing.image.url %>" class="card-img-top show-img">
      
        <div class="card-body">
          
            
            <p class="card-text"> <i><%= listing.description %> <br></i></p>
            <p class="card-text"> <%= listing.price %> <br></p>
            <p class="card-text"> <%= listing.location %> <br></p>
            <p class="card-text"> <%= listing.country %> <br></p>
            <p class="card-text"> Owned by <%= listing.owner.username %> <br></p>

          
        </div>
       
        <!-- <a href="/listing//edit">Edit</a> -->
         <% if(currUser && currUser.equals(listing.owner._id)) { %>
        <div class="btns"> 
            <form method="get" action="/listing/<%= listing._id %>/edit">
              <button class="btn btn-secondary btn-m edit-btn"> Edit</button>
            </form>
            &nbsp;&nbsp;&nbsp;&nbsp;
            <form method="post" action="/listing/<%= listing._id %>?_method=DELETE">
              <button class="btn btn-secondary btn-m delete-btn"> Delete</button>
            </form>
        </div>
        <% } %>
      
    </div>
    <br>
    <hr>

    <% if(currUser) { %>
    <form method="post" action="/listing/<%= listing._id %>/review" novalidate class="needs-validation">
          <p><b> Leave a Comment </b></p>
          <!-- <div class="row mt-3 mb-3">
            <label for="rating">Rating</label>
            <input type="range" min="1", max="5" id="rating" name="review[rating]" required >
          </div> -->


<fieldset class="starability-basic">
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
  

          <div class="row mt-3 mb-3">
            <label for="comment">Comment</label>
            <textarea id="comment" name="review[comment]" class="form-control" cols="20" rows="2" required ></textarea>
            <div class="invalid-feedback"> Please enter comment</div>
          </div>
          <button class="btn btn-outline-dark "> Send </button>
    </form>
    <% } %>
        <hr>
      
      <div class="row ">
        <% for(let review of listing.reviews) { %>
          <div class="card col-5 mb-3 review-card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title"> <%= review.author.username %></h5>
              <p class="card-title"> <%= review.comment %> </p>
              <p class="starability-result" data-rating="<%= review.rating %>"></p>
            </div>
            <% if(currUser && review.author._id.equals(currUser._id)) { %>
            <form method="post" action="/listing/<%= listing._id %>/review/<%= review._id  %>?_method=DELETE">
              <button class="btn btn-outline-dark mb-3"> Delete </button>
            </form>
            <% } %>
          </div>
        <% } %>
      </div>
    </div>
  </div>
    

